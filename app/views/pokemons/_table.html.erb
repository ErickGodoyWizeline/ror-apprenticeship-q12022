
<table id="pokemon_table" class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Id</th>
      <th>Poke Id</th>
      <th>Name</th>
      <th>Image</th>
      <th>Types</th>
      <th>Abilities</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @pokemons.each do |pokemon| %>  
      <tr>
        <td><%= pokemon.id %></td>
        <td><%= pokemon.poke_id %></td>
        <td><%= pokemon.name %></td>
        <td><img src="<%= pokemon.image_url %>" alt="<%= pokemon.name %>"></td>
        <td><%= pokemon.poke_types.map do |type| type.name end.join(', ')%></td>
        <td><%= pokemon.abilities.map do |ability| ability.name end.join(', ')%></td>
        <td>
          <%= link_to pokemon_path(pokemon),
            {:class=>"btn btn-icon-only btn-info", :title=>"Show"} do %>
            <i class="fa fa-eye"></i>
          <%end%>
          <%= link_to edit_pokemon_path(pokemon), 
            {:class=>"btn btn-icon-only btn-primary", :title=>"Edit"} do %>
            <i class="fa fa-edit"></i>
          <%end%>
	        <%= link_to pokemon , method: :delete, :class => "btn btn-icon-only btn-danger",
            :title=>"Delete", data: { confirm: 'Â¿Are you sure want to delete '+pokemon.name+'?'} do %> 
            <i class="fa fa-trash-o"></i>
          <% end %>	

        </td>
      </tr>
    <%end%>
  </tbody>
</table>
